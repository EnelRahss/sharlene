{% extends 'base.html.twig' %}

{% block title %}Inscription{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

{# Formulaire #}

  <turbo-frame id="the_frame_id">
    {{ form_start(formulaire, {'attr': {'class':'register' } } ) }}
        <h2>Ajouter un compte</h2>
        {{ form_row(formulaire.firstname) }}
        {{ form_row(formulaire.lastname) }}
        {{ form_row(formulaire.email) }}
        {{ form_row(formulaire.password) }}
        {{ form_rest(formulaire) }}
        <button type="submit">S'inscrire</button>
    {{ form_end(formulaire)}}
    {% include "_components/_toast.html.twig" %}
</turbo-frame>
{% endblock %}
